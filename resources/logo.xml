  <!-- Characters -->
  <!-- Character 1 -->
  <circle cx="100" cy="100" r="40" fill="#ff6666"/>
  <!-- Character 2 -->
  <circle cx="300" cy="100" r="40" fill="#6666ff"/>
  
  <!-- Weapons -->
